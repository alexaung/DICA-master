@model dica.Models.AttachmentViewModel

<div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel1">Attach File</h4>
        </div>

        <div class="modal-body">

            @using (Html.BeginForm("UploadFile", "Attachment", FormMethod.Post, new { @id = "AttachForm", @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <div class="form-group required">
                        @Html.HiddenFor(model => model.UID)
                        @Html.LabelFor(m => m.File, htmlAttributes: new { @class = "control-label col-xs-2" })
                        <div class="col-xs-10">
                            @Html.TextBoxFor(m => m.File, new { type = "file", @class = "form-control" })
                            <strong>@Html.ValidationMessageFor(m => m.File, null, new { @class = "label label-danger" })</strong>
                        </div>
                    </div>
                </div>
                <div class="form-actions no-color text-center">
                    <input type="submit" value="Upload File" class="btn btn-primary" />
                    @*<input type="button" value="Delete File" class="btn btn-danger" onclick="DeleteFile()" />*@
                </div>
            }

            @*@using (Html.BeginForm("DeleteFile", "Trim", FormMethod.Post, new { @id = "DeleteTrim", @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <div class="form-group required">
                        @Html.HiddenFor(model => model.UID)

                    </div>
                </div>
            }*@
        </div>
    </div>
</div>