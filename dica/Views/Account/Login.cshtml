<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>DICA | Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
</head>

<body class="loginbody">
    <div class="container animated fadeInDown">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            @*<div class="panel-title"><span class="glyphicon glyphicon-lock"></span> Login</div>*@                            
                        </div>
                        <div style="padding-top:10px" class="panel-body">
                            <div style="display:none" id="login-alert" class="alert alert-danger"></div>
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="modal-header" align="center">
                                    <img class="img-circle" id="img_logo" src="~/img/logo-dica.png">
                                    
                                </div>

                                <div style="margin-bottom: 30px" class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "user name or email" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    @*<input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username or email">*@
                                </div>

                                <div style="margin-bottom: 25px" class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "password" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>

                                @*<div class="input-group">
                                    <div class="checkbox">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                    </div>
                                </div>*@

                                <div style="margin-top:10px; margin-left:10px; margin-right:10px" class="form-group">
                                    <!-- Button -->
                                    <div>
                                        <button type="submit" class="btn btn-primary btn-lg btn-block">
                                            <span class="glyphicon glyphicon-log-in"></span>
                                            <span class="label-icon">Login</span>
                                        </button>
                                    </div>
                                    @*<div class="col-sm-12 controls">
